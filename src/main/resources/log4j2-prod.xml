<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Properties>
		<Property name="LOG_FILE_NAME">/app/log.log</Property>
        <Property name="LOG_FILE_PATTERN">/app/log-%i.log</Property>
    </Properties>
    <Appenders>
		<RollingFile name="RollingFileAppender" fileName="${LOG_FILE_NAME}" filePattern="${LOG_FILE_PATTERN}">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} --- [%t] %-5p %c : %m%n" />
            <Policies>
                <!-- Roll over when file size reaches 5 KB -->
                <SizeBasedTriggeringPolicy size="5 KB" />
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="RollingFileAppender"/>
        </Root>
    </Loggers>
</Configuration>
